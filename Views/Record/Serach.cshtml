@model IEnumerable<栗子音乐.Models.sel_music_singer_Albums_all_Result>

@{
    ViewBag.Title = "album_single";
    Layout = "~/Views/Shared/_muban.cshtml";
}

<!-- partial:partials/_header.html -->
<!-- partial -->
<div class="container-fluid relative animatedParent animateOnce p-0">
    <div class="animated fadeInUpShort">
        <!--Banner-->
        <section class="relative" data-bg-possition="center"
                 style="background-image:url('https://cdn.lizixs.top/img/demo/b2.jpg');">
            <div class="has-bottom-gradient">
                <div class="row pt-5 ml-lg-5 mr-lg-5">
                    <div class="col-md-10 offset-1">
                        <div class="relative mb-5">
                            <br /><br /><br /><br /><br /><br />
                            <form class="searchOverlay__form" action="/Record/Serach">
                                <input class="searchOverlay__input"
                                       name="searchOverlay"
                                       type="text"
                                       placeholder="搜索音乐"
                                       autocomplete="off"
                                       spellcheck="false" />
                                <span class="searchOverlay__info" style="font-size:25px;">点击回车键搜索歌曲</span>
                            </form>
                            <h1 class="mb-2 text-primary" style="text-align:center;font-weight:bold">搜索结果如下：</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-gradient "></div>
        </section>
        <!--@@Banner-->

        <div class="p-3 p-lg-5">
            <!--New Releases-->
            <section>
                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="playlist">
                                    <ul class="list-group">
                                        <li class="list-group-item my-1">
                                            <div class="d-flex align-items-center">
                                                <div class="col-1">
                                                    <a class="no-ajaxy media-url" href="javascript:(0)">
                                                    </a>
                                                </div>
                                                <div class="col-6">
                                                    <h6>歌曲</h6>
                                                </div>
                                                <span class=" ml-auto">歌手</span>
                                                <a href="javascript:(0)" class="ml-auto">分享</a>
                                                <div class="ml-auto">
                                                    <a href="javascript:(0)">
                                                        播放
                                                    </a>
                                                </div>
                                            </div>
                                        </li>
                                        @foreach (var item in Model)
                                        {
                                            <li class="list-group-item my-1">
                                                <div class="d-flex align-items-center">
                                                    <div class="col-1">
                                                        <a class="no-ajaxy media-url Music_Play_Count" title="@item.Music_ID" href="~/media/@item.Music_Url">
                                                            <i class="icon-play s-28"></i>
                                                        </a>
                                                    </div>
                                                    <div class="col-6">
                                                        <h6>@item.Music_Name</h6>
                                                    </div>
                                                    <span class=" ml-auto">@item.Singer_Name</span>
                                                    <a href="#" class="ml-auto"><i class="icon-share-1"></i></a>
                                                    <div class="ml-auto">
                                                        <a href="~/media/@item.Music_Url" title="@item.Music_ID" class="no-ajaxy media-url btn btn-outline-primary btn-sm d-none d-lg-block Music_Play_Count">
                                                            播放
                                                        </a>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--@@New Releases-->
        </div>

    </div>
</div>
<!-- partial:partials/_foot.html -->
<!-- partial -->
